</span><span class='line'><span class="nx">coffee</span> <span class="o">=</span> <span class="nx">Coffee</span><span class="p">.</span><span class="nx">Decorators</span><span class="p">.</span><span class="nx">sprinkles</span><span class="p">(</span><span class="nx">coffee</span><span class="p">);</span>
</span><span class='line'><span class="nx">coffee</span> <span class="o">=</span> <span class="nx">Coffee</span><span class="p">.</span><span class="nx">Decorators</span><span class="p">.</span><span class="nx">whip</span><span class="p">(</span><span class="nx">coffee</span><span class="p">);</span>
</span><span class='line'><span class="nx">coffee</span> <span class="o">=</span> <span class="nx">Coffee</span><span class="p">.</span><span class="nx">Decorators</span><span class="p">.</span><span class="nx">milk</span><span class="p">(</span><span class="nx">coffee</span><span class="p">);</span>
